{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Mutation testing configuration for GitAutomate - Step 9 implementation",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "dashboard"],
  "testRunner": "jest",
  "coverageAnalysis": "perTest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.js",
    "enableFindRelatedTests": true
  },
  "mutate": [
    "src/lib/**/*.ts",
    "src/services/**/*.ts", 
    "src/ai/validation/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/test/**/*",
    "!src/**/__tests__/**/*",
    "!src/**/*.d.ts"
  ],
  "testFramework": "jest",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "dashboard": {
    "project": "github.com/methenol/gitautomate",
    "version": "main"
  },
  "htmlReporter": {
    "baseDir": "reports/mutation"
  },
  "clearTextReporter": {
    "allowColor": true,
    "logTests": false
  },
  "timeoutMS": 60000,
  "timeoutFactor": 2,
  "maxConcurrentTestRunners": 4,
  "logLevel": "info",
  "fileLogLevel": "trace",
  "allowConsoleColors": true,
  "disableTypeChecks": false,
  "ignorePatterns": [
    "src/app/**/*",
    "src/components/**/*", 
    "src/hooks/**/*",
    "*.config.js",
    "*.config.ts"
  ],
  "plugins": [
    "@stryker-mutator/core",
    "@stryker-mutator/jest-runner"  
  ]
}